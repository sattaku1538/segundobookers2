<% flash.each do |key, value| %>
<p id="<%= key %>"><%= value %></p>
<% end %>


<div class='row'>
    <div class='col-md-3'>
      <%= render 'books/list', user: @user, book: @book %>
      <!--%= render 'books/list', book: @book %>-->
     </div>

     <div class='col-md-8 offset-md-1'>
      <main>
        <h2>Book Detail</h2>
        <table class='table table-hover table-inverse'>
            <tbody>
             <tr>
                <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%><br>
                    <%= link_to @user.name %></td>    
                <td><%= @books.title %></td>
                <td><%= @books.body %></td>
                <td><%= link_to "Edit", edit_book_path(@books) %></td>
                <td><%= link_to "Destroy", book_path(@books), method: :delete %></td>
              </tr>
            </tbody>
        </table>
      </main>
     </div>
</div>
