<p id="notice"></p>
  <div class='container'>
    <div class='row'>
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
  		  <%= form_with model:@book, local:true do |f| %>
  		  
          <label for="inputTitle">Title</label><br>
          <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"title"%><br>
          <!--Placeholderは文体を強調するやつ-->
          <label for="inputBody">Opnion</label><br>
          <%= f.text_field :body, autofocus: true, id:"inputBody", placeholder:"ボディ"%><br>
          
          <%= f.submit "Update Book" %><br>
          <%= link_to("Show", book_path(@book.id)) %>
          <%= link_to("Back", books_path) %>
        <% end %>
     </div>
    </div>
 </div>
         
 