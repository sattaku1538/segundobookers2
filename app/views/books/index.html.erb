    <% if @book.errors.any? %>
    <%= @book.errors.count %>Error
    <% @book.errors.full_messages.each do |message| %>
    <%= message %>
    <% end %>
    <% end %>


<div class='row'>
    <div class='col-md-3'>
      <%= render 'books/list', user: @user, book: @book %>
      <!--%= render 'books/list', book: @book %>-->
    </div>
     <div class='col-md-9'>
      <main>
         <h2>Books</h2>
            <!--%= form_with model:@user, local:true do |f| %>-->
          <table class='table table-hover table-inverse'>
            <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan="3"></th>
                </tr>
            </thead>
              
            <tbody>
            <% @books.each do |f| %>
              <tr>
                <td><%= link_to user_path(f.user) do %>
                <%= attachment_image_tag f.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
                <% end %></td>
  　　　　　         <!--f.userの記述でf値の中のユーザーの情報を引き出す-->
                <td><%= link_to f.title, book_path(f.id) %></td>
                <td><%= f.body %></td>
              </tr>
            <% end %>
           </tbody>
          </table>
       
      </main>
      </div>
</div>
