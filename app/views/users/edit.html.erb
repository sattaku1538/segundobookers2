<% if @user.errors.any? %>
<%= @user.errors.count %>Error
<% @user.errors.full_messages.each do |message| %>
<%= message %>
<% end %>
<% end %>

<div class='container'>
 <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <%= form_with model:@user, local:true do |f| %>
          <div class="form-group">
          <h4>Name</h4><br>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%><br>
          </div>
          <div class="form-group">
          <h4>Image</h4><br>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
          </div>
          <div class="form-group">
          <h4>Introduction</h4><br>
          <%= f.text_field :introduction, placeholder: "自己紹介文" %> 
          </div>
          <%= f.submit "Update User" %>
        <% end %>
    </div>
  </div>
</div>