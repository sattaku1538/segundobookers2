<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>

  <label for="inputName">Name</label><br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
 
  
  <label for="inputImage">ProfileImage</label><br>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
  
  <label for="inputIntroduction">ProfileIntroduction</label><br>
  <%= f.text_field :introduction, placeholder: "自己紹介文" %> 
  
  <%= f.submit "Update User" %>
<% end %>