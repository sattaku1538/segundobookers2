<%= flash[:alert] %>

<div class='row'>
    <div class='col-md-3'>
      <%= render 'books/list', user: @user, book: @book %>
      <!--%= render 'books/list', book: @book %>-->
    </div>
     <div class='col-md-9'>
      <main>
         <h2>Users</h2>
          <table class='table table-hover table-inverse'>
            <thead>
                <tr>
                  <th>image</th>
                  <th>name</th>
                  <th colspan="3"></th>
                  <th></th>
                </tr>
            </thead>
              
            <tbody>
            <% @users.each do |f| %>
              <tr>
               <!--%= form_with model:@user, local:true do |f| %>-->
                <td><%= attachment_image_tag f, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></td>
                <td><%= f.name %></td>
                <td><%= link_to "Show", user_path(f.id) %></td>
              </tr>
            <% end %>
           </tbody>
          </table>
       
      </main>
      </div>
</div>

 